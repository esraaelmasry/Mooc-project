  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password ,  :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :dob %>
    <%= f.date_select :dob ,  :class => "form-control"%>
  </div>

  <div class="field">
    <%= f.label :gender %>
   
    <%= f.select :gender, ['Male', 'Female']%>
